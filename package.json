{
  "name": "bera-youtube-api",
  "version": "2.0.0",
  "description": "Bera YouTube to MP3 Download API - Fully Independent",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "install-ytdlp": "curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o yt-dlp && chmod +x yt-dlp",
    "setup": "npm install && npm run install-ytdlp",
    "test": "node -e \"console.log('API setup complete')\""
  },
  "dependencies": {
    "express": "^5.0.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "fluent-ffmpeg": "^2.1.3",
    "play-dl": "^1.9.7",
    "node-fetch": "^3.3.2",
    "ffmpeg-static": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "youtube",
    "mp3",
    "downloader",
    "api",
    "bera",
    "converter"
  ],
  "author": "Bera",
  "repository": {
    "type": "git",
    "url": "https://github.com/bera/youtube-api"
  },
  "bugs": {
    "url": "https://github.com/bera/youtube-api/issues"
  },
  "homepage": "https://github.com/bera/youtube-api#readme"
}
